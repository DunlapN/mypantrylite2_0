<div class="page-header">
  <h3>You are eating...</h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Recipe</dt>
      <dd><%= @meal.recipe.name %></dd>

      <dt>Date</dt>
      <dd><%= @meal.scheduled_date %></dd>

      <img src='<%= @meal.recipe.image %>' class='img-responsive'>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/meals" class="btn btn-primary">
        Back
      </a>
      <a href="/meals/<%= @meal.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_meal/<%= @meal.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
