<div class="page-header">
  <h1>
    Future Meals
    <a href="/meals/new" class="btn btn-lg btn-success">New Meal</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Recipe</th>
        <th>Image</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>

      <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.recipe.name %></td>
        <td><img src="<%= meal.recipe.image %>" class="index-image img-responsive"></td>
        <td><%= meal.scheduled_date.strftime("%B %-d, %Y")%></td>
        <td>

          <a href="/meals/<%= meal.id %>" class="btn btn-primary">Details</a>
          <a href="/meals/<%= meal.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_meal/<%= meal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

