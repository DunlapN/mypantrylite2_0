<div class="page-header">
  <h3>Hey <%= @user.username %></h3>
  <h5>Here is a little summary of your activity</h5>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <h4>Your Info:</h4>
      <dt>Email</dt>
      <dd><%= @user.email %></dd>

      <dt>Username</dt>
      <dd><%= @user.username %></dd>

    </dl>

  </div>
</div>

<!-- A User has many pantry_items -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Pantry Items
      </li>

      <% @user.pantry_items.each do |pantry_item| %>
        <li class="list-group-item">
          <a href="/pantry_items/<%= pantry_item.id %>">
            <%= pantry_item.food.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/pantry_items/<%= pantry_item.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == pantry_item.user %>
              <a href="/pantry_items/<%= pantry_item.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_pantry_item/<%= pantry_item.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A User has many recipes -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Recipes
      </li>

      <% @user.recipes.each do |recipe| %>
        <li class="list-group-item">
          <a href="/recipes/<%= recipe.id %>">
            <%= recipe.name %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/recipes/<%= recipe.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == recipe.user %>
              <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_recipe/<%= recipe.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

