<!-- Validation failure messages -->
<% if @ingredient.errors.any? %>
  <% @ingredient.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Ingredient #<%= @ingredient.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_ingredient/<%= @ingredient.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for food_id -->
      <div class="form-group">
        <label for="food_id" class="control-label">
          Food
        </label>

        <input type="text" id="food_id" name="food_id" placeholder="Food" class="form-control" value="<%= @ingredient.food_id %>">
      </div>

      <!-- Label and input for recipe_id -->
      <div class="form-group">
        <label for="recipe_id" class="control-label">
          Recipe
        </label>

        <input type="text" id="recipe_id" name="recipe_id" placeholder="Recipe" class="form-control" value="<%= @ingredient.recipe_id %>">
      </div>

      <button class="btn btn-warning">
        Update Ingredient
      </button>
      or
      <a href="/ingredients/<%= @ingredient.id %>">Cancel</a>
    </form>
  </div>
</div>
