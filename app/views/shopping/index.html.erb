<div class="page-header">
  <h1>
    Shopping List
  </h1>
  <h4> Already own something on the list? Add it to your pantry now!
  </h4>
    <a href="/pantry_items/new" class="btn btn-lg btn-success">Add New Pantry Item</a>
  
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Food</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @grocery_list.each do |grocery_item| %>
      <tr>
        <td>
            <a href="/foods/<%= grocery_item.id %>">
              <%= grocery_item.name %>
            </a>
          </td>
        <td>
          <img src="<%= grocery_item.image %>" class="index-image img-responsive">
        </td>
        <td>
          <form class="" action="create_pantry_item.html" method="post">

            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
            <!-- Hidden input for userid -->
            <input type="hidden" name="userid" value="<%= current_user.id %>">
            <input type="hidden" name="food_id" value="<%= grocery_item.id%>">
            <button class="btn btn-success">
              Add to Pantry
            </button>
          </form>
        </td>
      </tr>
      <% end %>
    </table>

  </div>
</div>
