<div class="page-header">
  <h1>
    Pantry items
    <a href="/pantry_items/new" class="btn btn-lg btn-success">New Pantry item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Food</th>
        <th>Image</th>
        <th>Actions</th>
      </tr>

      <% @pantry_items.each do |pantry_item| %>
      <tr>
        <td>
          <% if pantry_item.food.present? %>
            <a href="/foods/<%= pantry_item.food.id %>">
              <%= pantry_item.food.name %>
            </a>
          <% end %>
        </td>
        <td>
          <img src="<%= pantry_item.food.image %>"">
        </td>
        <td>
          <a href="/pantry_items/<%= pantry_item.id %>" class="btn btn-primary">Show</a>

          <% if current_user == pantry_item.user %>
            <a href="/pantry_items/<%= pantry_item.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_pantry_item/<%= pantry_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @pantry_items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
